<div class="column">
  <h3 class="title has-text-white-ter has-text-right">Add ingredient
  </h3>

  <div class="columns">
    <div class="column box">
      <%= form_with(model: @inventory) do |form| %>
        <% if @inventory.errors.any? %>
          <div style="color: red">
            <h2><%= pluralize(@inventory.errors.count, "error") %> prohibited this ingredient from being saved:</h2>

            <ul>
              <% @inventory.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="field is-horizontal">
          <div class="field-label is-normal">
            <label class="label">Choose your ingredients</label>
          </div>
          <div class="field-body">
            <div class="field">
              <div class="control">
                <div class="select is-primary">
                  <%= form.select(:ingredient_id, @ingredients_list, autofocus: true, prompt: "Select an ingredient" ) %>
                </div>
              </div>
            </div>
          </div>
        </div>        

        <div class="actions has-text-right">
          <%= link_to "Back to inventory", inventories_path, class: "button is-link" %>
          <%= form.submit "Add", class: "button is-primary is-outlined" %>
        </div>
      <% end %>
    </div>
  </div>

</div>
