<%= tag.h4 "We couldn't find a recipe that matches your inventory. :(", class: "subtitle has-text-centered" unless @doable_recipes.length > 0 %>

<!-- Start Carousel -->
<div id="oracle-carousel" class="carousel">
  <% @doable_recipes.each do |recipe| %>
    <%= tag.div class: "item-#{recipe.id}", style: "margin: 2.5rem;" do %>
      <div class="card is-6 is-offset-3">
        <div class="card-image">
          <figure class="image is-2by1">
            <%= image_tag recipe.picture if recipe.picture.attached? %>
          </figure>
        </div>
        <div class="card-content">
          <div class="media">
            <div class="media-content">
              <div class="block">
                <h2 class="title has-text-primary">
                  <%= recipe.name %>
                </h2>
                <p class="subtitle has-text-grey-dark">
                  <%= recipe.recipe_category.name %>
                </p>
              </div>
              <div class="block">
                <p class="subtitle is-6 has-text-dark">
                  <%= recipe.description %>
                </p>
              </div>
              <div class="block">
                <h4 class="subtitle has-text-primary">Ingredients</h4>
                <div class="tags">
                  <% parsed_ingredients(recipe).each do |ingredient| %>
                    <% if @user_ingredients.include?(ingredient["name"]) %>
                      <%= tag.span "", class: "tag is-success" do %>
                        <%= ingredient["name"].titleize %>
                      <% end %>
                    <% else %>
                      <%= tag.span "", class: "tag is-warning" do %>
                        <%= ingredient["name"].titleize %>
                      <% end %>
                    <% end %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>

        </div>
        <footer class="card-footer">
          <%= link_to "Read more...", recipe, class: "button card-footer-item is-primary" %>
        </footer>
      </div>
    <% end %>
  <% end %>
</div>
<!-- End Carousel -->
