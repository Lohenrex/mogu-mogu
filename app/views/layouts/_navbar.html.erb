<div class="hero-head">
  <nav class="navbar navbar">
    <div class="navbar-brand">
      <%= link_to("/", class: "navbar-item") do %>
        <span class="icon title">
          <i class="fas fa-pastafarianism"></i>
        </span>
        <span class="title">mogumogu</span>
      <% end %>
      <span role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false" data-target="navbarMenu">
        <span aria-hidden="true"></span>
        <span aria-hidden="true"></span>
        <span aria-hidden="true"></span>
      </span>
    </div>
    <div id="navbarMenu" class="navbar-menu">
      <div class="navbar-end">
        <span class="navbar-item">
          <%= render "layouts/searchbar" %>
        </span>
      </div>
      <div class="navbar-end">
        <% if user_signed_in? %>

          <span class="navbar-item">
            <%= link_to(new_recipe_path) do %>
              <span class="icon">
                <i class="fas fa-plus-circle"></i>
              </span>
              New recipe
            <% end %>
          </span>

          <span class="navbar-item">
            <%= link_to(inventories_path) do %>
              <span class="icon">
                <i class="fas fa-cloud-meatball"></i>
              </span>
              My inventory
            <% end %>
          </span>

          <span class="navbar-item">
            <%= link_to(edit_user_registration_path) do %>
              <span>Hi, <i class="fas fa-user"></i> <%= current_user.name %>
              </span>
            <% end %>
          </span>

          <% if current_user.admin? %>
            <div class="navbar-item has-dropdown is-hoverable">
              <a class="navbar-link">
                <span class="icon" title="Admin tools">
                  <i class="fas fa-tools"></i>
                </span>
              </a>

              <div class="navbar-dropdown has-text-black">
                <%= link_to "Users", users_path, class: "navbar-item" %>
                <hr class="navbar-divider">
                <div class="navbar-item has-text-primary has-text-weight-semibold">
                  Recipes & stuff
                </div>
                <%= link_to "Ingredients", ingredients_path, class: "navbar-item" %>
                <%= link_to "Ingredient categories", ingredient_categories_path, class: "navbar-item" %>
                <%= link_to "Appliances", appliances_path, class: "navbar-item" %>
                <%= link_to "Recipe categories", recipe_categories_path, class: "navbar-item" %>
                <%= link_to "Recipes", "#", class: "navbar-item" %>
              </div>
            </div>
          <% end %>

          <span class="navbar-item">
            <%= button_to "Log Out", destroy_user_session_path, method: :delete, class: 'button is-dark' %>
          </span>

        <% else %>

          <span class="navbar-item">
            <%= link_to "Sign Up", new_user_registration_path, class:  "button is-dark" %>
          </span>

          <span class="navbar-item">
            <%= link_to(new_user_session_path, class: "button is-primary is-inverted is-outlined") do %>
              <span class="icon">
                <i class="fas fa-sign-in-alt"></i>
              </span>
              <span>Sign In
              </span>
            <% end %>
          </span>
        <% end %>

      </div>
    </div>
  </nav>
</div>
