<div class="column">
  <h3 class="title has-text-white-ter has-text-right">
    Recipe categories
  </h3>
  <hr class="login-hr">
  <p class="subtitle has-text-white-ter has-text-right">
    We already have <%= @recipe_categories.length %> recipe categories!
  </p>
  <div class="block">
    <%= link_to "New recipe category", new_recipe_category_path, class: "button is-success" %>
  </div>

  <div class="columns">
    <div class="column box">
      <table class="table is-striped is-hoverable has-text-centered is-fullwidth">
        <thead>
          <tr>
            <th>Name</th>
            <th>Updated at</th>
            <th>Created at</th>
            <th>Delete</th>
          </tr>
        </thead>
        <tbody>
          <% @recipe_categories.each do |recipe_category| %>
            <tr>
              <td class="has-text-primary">
                <%= link_to recipe_category.name, edit_recipe_category_path(recipe_category) %>
              </td>
              <%= tag.td recipe_category.updated_at %>
              <%= tag.td recipe_category.created_at %>
              <td>
                <%= button_to "Destroy this recipe_category", recipe_category, method: :delete, class: "delete is-danger", data: { confirm: "Are you REALLY sure?" } %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

</div>
