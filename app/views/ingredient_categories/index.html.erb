<div class="column">
  <h3 class="title has-text-white-ter has-text-right">
    Ingredient categories
  </h3>
  <hr class="login-hr">
  <p class="subtitle has-text-white-ter has-text-right">
    We already have <%= IngredientCategory.count %> ingredient categories!
  </p>
  <div class="block">
    <%= link_to "New ingredient category", new_ingredient_category_path, class: "button is-success" %>
  </div>

  <div class="columns">
    <div class="column box">
      <table class="table is-striped is-hoverable has-text-centered is-fullwidth">
        <thead>
          <tr>
            <th>Name</th>
            <th>Updated at</th>
            <th>Created at</th>
            <th>Delete</th>
          </tr>
        </thead>
        <tbody>
          <% @ingredient_categories.each do |ingredient_category| %>
            <tr>
              <td class="has-text-primary">
                <%= link_to ingredient_category.name, edit_ingredient_category_path(ingredient_category) %>
              </td>
              <%= tag.td ingredient_category.updated_at %>
              <%= tag.td ingredient_category.created_at %>
              <td>
                <%= button_to "Destroy this ingredient category", ingredient_category, method: :delete, class: "delete is-danger", data: { confirm: "Are you REALLY sure?" } %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>