<div id="<%= dom_id recipe %>">
  <p>
    <strong>Name:</strong>
    <%= recipe.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= recipe.description %>
  </p>

  <p>
    <strong>Picture:</strong>
    <%= recipe.picture %>
  </p>

  <p>
    <strong>Ingredients:</strong>
    <%= recipe.ingredients %>
  </p>

  <p>
    <strong>Appliances:</strong>
    <%= recipe.appliances %>
  </p>

  <p>
    <strong>Steps:</strong>
    <%= recipe.steps %>
  </p>

  <p>
    <strong>Recipe category:</strong>
    <%= recipe.recipe_category_id %>
  </p>

  <p>
    <strong>Steps video:</strong>
    <%= recipe.steps_video %>
  </p>

  <p>
    <strong>User:</strong>
    <%= recipe.user_id %>
